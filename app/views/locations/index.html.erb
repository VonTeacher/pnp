<% provide(:title, @page_title) %>

<main>
  <h1><%= @page_title %></h1>

  <div>
    <ul>
      <li style="display: inline-block;"><%= link_to 'View Locations', locations_path %></li>
      <li style="display: inline-block;"><%= link_to 'View Dungeons', dungeons_path %></li>
      <li style="display: inline-block;"><%= link_to 'View Geographies', geographies_path %></li>
      <li style="display: inline-block;"><%= link_to 'View Municipalities', municipalities_path %></li>
    </ul>
  </div>

  <div class="add">
    <%= link_to '+ Add a New Location', new_location_path %>
  </div>

  <% @locations.each do |location| %>
    <div>
      <%= link_to location.name, location %>
    </div>
  <% end %>
</main>
